<div>
  <h4>
     Add details
  </h4>

<table class="table">
  <thead>    
    <th>Target</th> 
    <th>Actual</th>         
    <th>Day</th>
    <th>Notes</th>  
  </thead>

<% @details.each do |detail| %>
  <tr>
    <td><%= detail.target %></td>               
    <td><%= detail.actual %></td>
    <td><%= detail.day%></td> 
    <td><%= detail.notes %></td>                   
    <td><%= link_to 'Show', detail %>  <%= link_to 'Edit', edit_detail_path(detail) %>
        <%= link_to 'Destroy',detail, method: :delete, data: {confirm: 'Are you sure?'} %> 

    </td>  
  </tr>
<% end %>

</table>
<br />
</div>